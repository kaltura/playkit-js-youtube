{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "..",
    "preserveSymlinks": true,
    "paths": {
      "*": ["../node_modules/*", "./src"]
    },
    "types": ["node"],
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*.ts"]
}
